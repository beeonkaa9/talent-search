<!doctype html>
<html>
<head>
	<meta charset="UTF-8">
	<title>Localy</title>
	<link rel="stylesheet" type="text/css" href="css/style.css">
	
</head>
<body>
	<div id="header">
		<h1><a href="/home" class="logo">
			<img src="images/logocrop.png" alt="">ocaly</a> 
		</h1>
		
		<ul id="navigation">
			<li class="selected">
				<a href="/home">home</a>
			</li>
			<li>
				<a href="about.html">about</a>
			</li>
			<li>
				<a href="contact.html">contact</a>
			</li>
		</ul>
	</div>

	<div class = "row">
		<!--left column-->
		<div class = "column side">
			<h3>Welcome, <%=user.username %>!</h3>

			<img src="images/unnamed.png">
					<p><h3><%=user.name%> | <%=user.talent%></h3>
		</div>

		<div class = "column middle">
			<div id="body">
				<h3>Connect with other local talent</h3>
				<form method="post" action="/group">
					<h3>Talent you are searching for:</h3> <input type="text" name="talentf"><br>
					<h3>Which city?</h3> <input type="text" name="cityf"><br>
					<input type="submit" value="Submit">
				</form>    
			</div>
		</div>

		<!--right column-->
		<div class = "column side">
			<div id = body>
				<h3><a href = "./logout">Logout</a></h3>
			</div>
		</div>
	</div>

	<div class = "row">
		<div class = "column middle">
			<h3>Your feed</h3>
			
			<!--<form action = "/api/images" enctype = "multipart/form-data" method='post'>
				<input type = "submit" value="Upload a photo">
			</form>-->

			<button id = "upload_widget" class="cloudinary-button">Upload a photo</button>
		</div>
	</div>
	
	<!--Map display-->
	<div id="pattern" class="pattern">
		<div class="map">
		  <a href="https://maps.google.com/maps?q=Pittsburgh,+PA&hl=en&sll=40.697488,-73.979681&sspn=0.667391,1.447449&oq=Pittsburgh&hnear=Pittsburgh,+Allegheny,+Pennsylvania&t=m&z=12" class="btn map-link">View Map</a>
		</div>
	  </div>
	  <!--End Pattern HTML-->
	  
	  <script src="https://widget.cloudinary.com/v2.0/global/all.js" type="text/javascript">  
	  </script>

	  <script type = "text/javascript">
		  var myWidget = cloudinary.createUploadWidget({ 
  			cloudName: "dmha0thbp", uploadPreset: "wputamag" }, (error, result) => { });
			
		  document.getElementById("upload_widget").addEventListener("click", 
		  function(){
             myWidget.open();
          }, false);
	  </script>
	
</body>
</html>
